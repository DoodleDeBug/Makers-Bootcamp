<link rel="stylesheet" type="text/css" href="/style.css">

<nav class="nav">
  <a class="link" href="/spaces">Spaces</a> | <a class="link" href="/requests">Requests</a> | <a class="link" href="/sign-out">Sign out</a>
</nav>
<%# seperator %>
<div class="title">
  <h1>Book a Space</h1>
  <a class="link" href="/spaces/new">List a Space</a>
</div>
<%# seperator %>
<div class="title">
  <% if @user %>
    <h1>Welcome, <%= @user.email_address %></h1>
  <% end %>
</div>
<%# seperator %>
<div class="calendar-container">
  <form class="calendar" action="/filter" method="post">
    <label for='available_from'>Available from:
      <input type="date" name="available_from" required>
    </label>
    <br>
    <label for='available_to'>Available to:
      <input type="date" name="available_to" required>
    </label>
    <br>
    <input class="button filter_button" type="submit" value="Filter Spaces">
  </form>
</div>
<%# seperator %>
<div class="filter-container">
  <%= @msg %>
  <form action="/remove_filter" method="post">
    <input style="margin-left: 1rem;" type="submit" value="Remove Filter">
  </form>
</div>
<%# seperator %>
<div>
  <ul class="list-container">
    <% @spaces.each do |space| %>
      <li>
        <div class="list-item-container">
          <h3><%= space[0] %></h3>
          <p><%= space[1] %>, Â£<%= space[2] %></p>
          <p>Available from: <%= space[3] %>, Available to: <%= space[4] %></p>
        </div>
      </li>
    <% end %>
  </ul>
</div>
